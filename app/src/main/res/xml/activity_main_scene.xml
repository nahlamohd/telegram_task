<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="#212d3b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@+id/app_bar">

            <CustomAttribute
                app:attributeName="roundPercent"
                app:customFloatValue="0" />
        </Constraint>


        <Constraint
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@id/app_bar" />

        <Constraint
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@+id/app_bar" />

        <Constraint
            android:id="@+id/icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/app_bar"
            app:layout_constraintTop_toTopOf="@id/app_bar" />


        <Constraint
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="251dp"
            app:layout_constraintStart_toStartOf="@id/app_bar"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="32" />
        </Constraint>

        <Constraint
            android:id="@+id/channel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/channel_name"
            app:layout_constraintTop_toBottomOf="@+id/channel_name">

            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/white" />
        </Constraint>

        <Constraint
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="320dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />
        <Constraint
            android:id="@+id/view_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/app_bar"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintStart_toStartOf="@id/app_bar" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#212d3b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/image_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="-26dp"
            app:layout_constraintEnd_toEndOf="@+id/ib_back"
            app:layout_constraintStart_toStartOf="@+id/ib_back"
            app:layout_constraintTop_toBottomOf="@+id/ib_back">
            <CustomAttribute
                app:attributeName="roundPercent"
                app:customFloatValue="1" />
        </Constraint>


        <Constraint
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@+id/app_bar" />

        <Constraint
            android:id="@+id/icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@+id/app_bar" />

        <Constraint
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"

            android:layout_marginTop="-16dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_profile"
            app:layout_constraintStart_toEndOf="@+id/image_profile"
            app:layout_constraintTop_toTopOf="@id/image_profile">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="22" />

        </Constraint>


        <Constraint
            android:id="@+id/channel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/channel_name"
            app:layout_constraintTop_toBottomOf="@+id/channel_name">

            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#FFFFFF" />
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="16" />
        </Constraint>


        <Constraint
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />


        <Constraint
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-80dp"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@id/app_bar" />
        <Constraint
            android:id="@+id/view_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="313dp"
            app:layout_constraintBottom_toBottomOf="@+id/app_bar"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#212d3b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/image_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/ib_back"
            app:layout_constraintStart_toEndOf="@+id/ib_back"
            app:layout_constraintTop_toTopOf="@+id/ib_back">

            <CustomAttribute
                app:attributeName="roundPercent"
                app:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@+id/app_bar" />

        <Constraint
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@+id/app_bar" />


        <Constraint
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-12dp"
            android:paddingTop="-8dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_profile"
            app:layout_constraintStart_toEndOf="@+id/image_profile"
            app:layout_constraintTop_toTopOf="@+id/image_profile">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="18" />
        </Constraint>


        <Constraint
            android:id="@+id/channel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="-16dp"
            app:layout_constraintEnd_toEndOf="@+id/channel_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/channel_name"
            app:layout_constraintTop_toBottomOf="@+id/channel_name">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="12" />

        </Constraint>


        <Constraint
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />


        <Constraint
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-80dp"
            app:layout_constraintEnd_toEndOf="@+id/app_bar"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            app:layout_constraintTop_toTopOf="@id/app_bar" />
        <Constraint
            android:id="@+id/view_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="313dp"
            app:layout_constraintBottom_toBottomOf="@+id/app_bar"
            app:layout_constraintEnd_toEndOf="@+id/app_bar" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/middle"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="100"
            app:touchAnchorId="@id/content"
            app:touchAnchorSide="top" />
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/middle">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/content"
            />
    </Transition>

</MotionScene>
